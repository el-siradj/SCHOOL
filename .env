=# Production Environment Variables Template
# ⚠️ انسخ هذا الملف إلى .env وغيّر القيم حسب بيئتك

# === Database Configuration ===
PORT=3000
DB_HOST=127.0.0.1
DB_USER=u574400981_Amine
DB_PASS=Amino@2025
DB_NAME=u574400981_school_notify

# === Security ===
# ⚠️ CRITICAL: Generate a strong secret key!
# استخدم: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE_REPLACE_THIS_WITH_64_CHARACTER_RANDOM_STRING

# === File Uploads ===
UPLOAD_DIR=src/uploads

# === Public URLs / Hosts ===
# The base URL where the backend is served
APP_BASE_URL=https://api.crshc.com

# Public base URL for uploaded media
UPLOADS_BASE_URL=https://api.crshc.com

# Frontend origin (for redirects, emails, etc.)
FRONTEND_URL=https://riad.crshc.com

# === Security / HTTP ===
NODE_ENV=production
LOG_HTTP=1

# === CORS Configuration ===
# List allowed origins (comma-separated, no spaces)
CORS_ORIGINS=https://riad.crshc.com
CORS_ALLOW_ALL=false
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# === Rate Limiting ===
RATE_LIMIT_WINDOW_MS=90000        # 15 minutes
RATE_LIMIT_MAX=30000                 # 300 requests per window
AUTH_RATE_LIMIT_WINDOW_MS=900000   # 15 minutes
AUTH_RATE_LIMIT_MAX=300             # 30 auth attempts per window

# === WhatsApp Integration ===
WHATSAPP_ENABLED=true
WHATSAPP_HEADLESS=true
WHATSAPP_NAV_TIMEOUT_MS=60000

# === Puppeteer Configuration ===
# For production Linux servers
PUPPETEER_SKIP_SANDBOX=true
PUPPETEER_ARGS="--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage"

# Optional: Use system Chrome instead of bundled Chromium
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Optional: Custom cache directory
PUPPETEER_CACHE_DIR=

# Skip downloading Chromium (if using system Chrome)
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false

# === Logging ===
LOGS_DIR=logs
