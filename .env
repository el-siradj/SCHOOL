UPLOAD_DIR=src/uploads



# Public URLs / Hosts
# The base URL where the backend is served (used for building absolute links)
APP_BASE_URL=https://api.crshc.com
# Public base URL for uploaded media (if different from APP_BASE_URL)
UPLOADS_BASE_URL=https://api.crshc.com
# Frontend origin (useful for emails/redirects)
FRONTEND_URL=https://riad.crshc.com

# Security / HTTP
NODE_ENV=production
LOG_HTTP=1
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://riad.crshc.com
# CORS configuration
# - Multiple origins: separate by commas (no spaces required)
#   Example: http://localhost:5173,https://app.example.com
# - If CORS_ALLOW_ALL=true the server will accept all origins.
CORS_ALLOW_ALL=false
# Whether to include credentials (cookies, Authorization headers)
CORS_CREDENTIALS=true
# Optional: restrict allowed HTTP methods and headers (comma-separated)
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=30

WHATSAPP_ENABLED=true
WHATSAPP_HEADLESS=true
WHATSAPP_NAV_TIMEOUT_MS=60000

PUPPETEER_SKIP_SANDBOX=true
PUPPETEER_ARGS="--no-sandbox --disable-setuid-sandbox --disable-dev-shm-usage"

# Puppeteer / Chrome options
# - If you want to use a system-installed Chrome/Chromium, set the executable path below
#   Example (Windows): PUPPETEER_EXECUTABLE_PATH=C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser

# Optional: change Puppeteer's download/cache directory (useful if disk C: is full)
# Example (Windows): PUPPETEER_CACHE_DIR=D:\\puppeteer-cache
PUPPETEER_CACHE_DIR=

# If you prefer NOT to download Chromium with Puppeteer (and use system Chrome), set to true
PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=false